  "license": "ISC",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.72",
    "@types/node": "^14.14.33",
    "@types/typescript": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.9",
    "typescript": "4.1.5"
  },
  "dependencies": {
    "aws-sdk": "^2.862.0",
    "crypto": "^1.0.1",
    "dotenv": "^8.2.0",
    "mailgun": "^0.5.0",
    "mailgun.js": "^3.3.0"
  }
