{
  "name": "receeve-coding-challenge",
  "version": "1.0.0",
  "description": "receeve full stack / backend coding challenge",
  "main": "handler.ts",
  "scripts": {
    "lint": "npx eslint src/**/*.ts",
    "build": "rm -rf dist && tsc",
    "start": "node dist/handler.js",
    "deploy": "npm run build && cp -R node_modules/ dist/node_modules && cp -R .serverless/ dist/.serverless && cp serverless.yml dist/serverless.yml && cd dist/ && serverless deploy && cd .."
